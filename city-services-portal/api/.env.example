# Environment variables declared in this file are available at build-time and run-time.
# More info: https://pris.ly/d/dotenv-expand

DATABASE_URL="file:./dev.db"
# JWT Secret for authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Origins
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173"

# Application URLs
APP_URL="http://localhost:5173"
API_URL="http://localhost:3001"

# Email Simulation Settings (for demo purposes)
EMAIL_SIMULATION_ENABLED=true
EMAIL_SIMULATION_LOG_LEVEL=detailed

# Password Requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_MAX_CONSECUTIVE_CHARS=2
PASSWORD_MAX_REPEATED_CHARS=3

# Token Expiration (in hours)
EMAIL_VERIFICATION_EXPIRY=24
PASSWORD_RESET_EXPIRY=1
ACCESS_TOKEN_EXPIRY=24
REFRESH_TOKEN_EXPIRY=168